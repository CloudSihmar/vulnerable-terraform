{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creating Global Accelerator service",
    "Resources": {
        "SampleWafConstraintSet": {
            "Type": "AWS::WAF::SizeConstraintSet",
            "Properties" : {
                "Name" : "sampleWafConstraintSet",
                "SizeConstraints" : [
                    {
                        "ComparisonOperator" : "EQ",
                        "FieldToMatch" : {
                                "Type" : "Body"
                        },
                        "Size" : 4096,
                        "TextTransformation" : "NONE"
                    },
                    {
                        "ComparisonOperator" : "GTE",
                        "FieldToMatch" : {
                            "Data": "User-Agent",
                            "Type" : "Body"
                        },
                        "Size" : 4096,
                        "TextTransformation" : "NONE"
                    }
                ]
              }
        }
    }
}