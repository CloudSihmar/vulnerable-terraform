{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "MyDBEventSubscription": {
            "Type": "AWS::RDS::EventSubscription",
            "Properties" : {
                "Enabled" : true,
                "EventCategories" : [ 
                    "availability",
                    "deletion",
                    "failover",
                    "failure",
                    "low storage",
                    "maintenance",
                    "notification",
                    "read replica",
                    "recovery",
                    "restoration"
                ],
                "SnsTopicArn" : "${aws_sns_topic.default.arn}",
                "SourceIds" : ["aws_db_instance.default", "aws_db_instance.default2"],
                "SourceType" : "db-instance"
              }
        }
    }
}